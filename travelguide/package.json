		"@tailwindcss/vite": "^4.1.8",
		"@types/node": "^22.15.29",
		"bits-ui": "^1.8.0",
		"eslint": "^9.28.0",
		"maplibre-gl": "^5.6.0",
		"pocketbase": "^0.26.0",
