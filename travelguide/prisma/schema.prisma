generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.db" //env("DATABASE_URL")
}

model Museum {
  id Int @id @default(autoincrement())
  name String @unique
  location String
  score Int
  disableAccessibility Boolean?
  estimatedDuration Float?
  price Float
  currency String

}

