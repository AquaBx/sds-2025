generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.db" //env("DATABASE_URL")
}

enum Type {
  Hotel
  Museum
  Sport
  Mall
  Restaurant
  Park
}

model Picture {
  id Int @id @default(autoincrement())
  url String
  activity Activity @relation(fields: [id], references: [id])
}

model Tag {
  id       Int      @id @default(autoincrement())
  name     String
  activity Activity @relation(fields: [activityId], references: [id])
  activityId Int
}

model Activity {
  id Int @id @default(autoincrement())
  name String
  type Type
  location String
  address String
  tags Tag[]
  score Int
  disableAccessibility Boolean?
  estimatedDuration Float?
  price Float
  currency String
  theme String
  openingTime String?
  closingTime String?
  availableFrom DateTime?
  availableUntil DateTime?
  description String
  picture Picture[]
}